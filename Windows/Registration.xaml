<Window x:Class="PlagiarismGuard.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlagiarismGuard.Windows"
        mc:Ignorable="d"
        Title="Регистрация" Height="600" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/Style.xaml"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация" 
                   FontFamily="{DynamicResource AnonymousProFont}" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0,20,0,30"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Логин" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="Username" 
                     Style="{StaticResource RoundedTextBoxStyle}" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Email" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="Email" 
                     Style="{StaticResource RoundedTextBoxStyle}" 
                     Margin="0,0,0,15"/>

            <TextBlock Text="Пароль" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="Password" 
                         Style="{StaticResource RoundedPasswordBoxStyle}" 
                         Margin="0,0,0,5"/>

            <TextBlock Text="Пароль должен содержать: минимум 10 символов, 1 заглавную букву, 1 строчную букву, 1 цифру, 1 спецсимвол" 
                       FontSize="12" 
                       Foreground="Gray" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Повторите пароль" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPassword" 
                         Style="{StaticResource RoundedPasswordBoxStyle}" 
                         Margin="0,0,0,10"/>

            <TextBlock x:Name="ErrorMessage" 
                       Foreground="Red" 
                       Text="" 
                       Margin="0,0,0,10" 
                       Visibility="Collapsed"/>

            <Button Content="Зарегистрироваться" 
                    Style="{StaticResource ButtonStyle}" 
                    Width="150" 
                    HorizontalAlignment="Right" 
                    Click="RegisterButton_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="2" 
                   Text="Уже есть аккаунт? Войти" 
                   Foreground="#636AE8" 
                   FontSize="14" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20" 
                   Cursor="Hand" 
                   MouseLeftButtonDown="LoginLink_Click"/>
    </Grid>
</Window>
