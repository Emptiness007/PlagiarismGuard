<Page x:Class="PlagiarismGuard.Pages.DocumentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlagiarismGuard.Pages"
      mc:Ignorable="d" 
      Title="DocumentsPage">

    <Grid Margin="10">
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/Style.xaml"/>
            
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="UploadButton" Content="Загрузить документ" Style="{StaticResource ButtonStyle}" Width="150" Margin="0,0,10,0" Click="UploadButton_Click"/>
            <TextBox x:Name="SearchTextBox" Width="200" Height="35"  Margin="10,0,0,0"  FontSize="14" TextChanged="SearchTextBox_TextChanged" HorizontalAlignment="Right" Style="{StaticResource RoundedTextBoxStyle}" />

            <ComboBox x:Name="SortComboBox" Width="150" Height="35" FontFamily="/Fonts/#Anonymous Pro" FontSize="14" Style="{StaticResource RoundedComboBoxStyle}"
                      SelectionChanged="SortComboBox_SelectionChanged" VerticalContentAlignment="Center" Margin="10,0,0,0">
                <ComboBoxItem Content="По умолчанию"/>
                <ComboBoxItem Content="Сначала новые"/>
                <ComboBoxItem Content="Сначала старые"/>
            </ComboBox>
        </StackPanel>

        <DataGrid x:Name="DocumentsDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Style="{StaticResource RoundedDataGridStyle}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя файла"  Binding="{Binding FileName}" Width="130" />
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Username}" Width="110"/>
                <DataGridTextColumn Header="Размер (байты)" Binding="{Binding FileSize}" Width="110"/>
                <DataGridTextColumn Header="Дата загрузки" Binding="{Binding UploadedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="120"/>
                <DataGridCheckBoxColumn x:Name="PlagiarismCheckColumn" Header="Использовать для проверки" 
                        Binding="{Binding IsUsedForPlagiarismCheck, UpdateSourceTrigger=PropertyChanged}" 
                        Width="130">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="Tag" Value="{Binding Id}"/>
                            <EventSetter Event="Checked" Handler="PlagiarismCheck_Checked"/>
                            <EventSetter Event="Unchecked" Handler="PlagiarismCheck_Unchecked"/>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>
                <DataGridTemplateColumn Header="Действия" IsReadOnly="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Скачать" Click="DownloadButton_Click" Tag="{Binding Id}" Style="{StaticResource ButtonStyle}" Width="80" Margin="3"/>
                                <Button Content="Удалить" Click="DeleteButton_Click" Tag="{Binding Id}" Style="{StaticResource ButtonStyle}" Width="80" Margin="3"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>