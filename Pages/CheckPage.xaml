<Page x:Class="PlagiarismGuard.Pages.CheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CheckPage">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/Style.xaml"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,5,0,0">
            <TextBlock x:Name="symbolCount" Text="Всего слов " FontFamily="/Fonts/#Anonymous Pro" VerticalAlignment="Top" FontSize="16"/>
            <TextBox x:Name="DocumentTextBox" AcceptsReturn="True" AcceptsTab="True" Style="{StaticResource TextAreaStyle}" VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap" Height="150" VerticalAlignment="Top" Margin="0,20,150,0" IsReadOnly="True"/>
            <Button x:Name="CheckButton" Click="CheckButton_Click" Content="Проверить" Style="{StaticResource ButtonStyle}" Width="130" HorizontalAlignment="Right" Margin="20,0,0,0">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="ButtonText" Text="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Content}" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="LoadingSpinner" IsIndeterminate="True" Width="16" Height="16" Margin="5,0,0,0" Visibility="Collapsed">
                                <ProgressBar.Template>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Grid>
                                            <Ellipse Width="14" Height="14" Stroke="White" StrokeThickness="2">
                                                <Ellipse.RenderTransform>
                                                    <RotateTransform CenterX="7" CenterY="7"/>
                                                </Ellipse.RenderTransform>
                                                <Ellipse.Triggers>
                                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                                                                 From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Ellipse.Triggers>
                                            </Ellipse>
                                        </Grid>
                                    </ControlTemplate>
                                </ProgressBar.Template>
                            </ProgressBar>
                        </StackPanel>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                <Setter TargetName="ButtonText" Property="Text" Value="Идет проверка"/>
                                <Setter TargetName="LoadingSpinner" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Margin="0,10,0,0">
            <Grid>
                <TextBlock x:Name="TextBlock" VerticalAlignment="Top" Padding="4,0,0,0" Text="Процент плагиата - 0%" FontFamily="/Fonts/#Anonymous Pro" FontSize="16"/>
                <ProgressBar x:Name="ProgressBar" Margin="0,25,0,0" Height="10" VerticalAlignment="Top" Value="45">
                    <ProgressBar.Foreground>
                        <SolidColorBrush Color="#636AE8"/>
                    </ProgressBar.Foreground>
                </ProgressBar>
                <DataGrid x:Name="SourceDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Style="{StaticResource RoundedDataGridStyle}" IsReadOnly="True" Margin="0,60,0,40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding SourceNo}" Width="40"/>
                        <DataGridTextColumn Header="Источник" Binding="{Binding SourceName}" Width="200"/>
                        <DataGridTextColumn Header="Отрывок" Binding="{Binding Excerpt}" Width="*"/>
                        <DataGridTextColumn Header="Процент совпадения" Binding="{Binding Similarity}" Width="150"/>
                        <!-- Заменяем на DataGridTextColumn -->
                    </DataGrid.Columns>
                </DataGrid>
                <Button Click="GenerateReportButton_Click" Margin="0,0,0,5" Content="Отчёт" Style="{StaticResource ButtonStyle}" Width="90" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>