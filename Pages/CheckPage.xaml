<Page x:Class="PlagiarismGuard.Pages.CheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CheckPage">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/Style.xaml"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,5,0,0">
            <TextBlock x:Name="symbolCount" Text="Всего слов " FontFamily="/Fonts/#Anonymous Pro" VerticalAlignment="Top" FontSize="16"/>
            <TextBox x:Name="DocumentTextBox" AcceptsReturn="True" AcceptsTab="True" Style="{StaticResource TextAreaStyle}" VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap" Height="150" VerticalAlignment="Top" Margin="0,20,130,0" IsReadOnly="True"/>
            <Button x:Name="CheckButton" Click="CheckButton_Click" Content="Проверить" Style="{StaticResource ButtonStyle}" Width="120" HorizontalAlignment="Right" Margin="20,0,0,0">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <TextBlock x:Name="ButtonText" Text="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Content}" VerticalAlignment="Center"/>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                <Setter TargetName="ButtonText" Property="Text" Value="Идет проверка.."/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TextBlock" Grid.Row="0" VerticalAlignment="Top" Padding="4,0,0,0" Text="Процент плагиата - 0%" FontFamily="/Fonts/#Anonymous Pro" FontSize="16"/>
                <ProgressBar x:Name="ProgressBar" Grid.Row="1" Margin="0,25,0,0" Height="10" VerticalAlignment="Top" Value="45">
                    <ProgressBar.Foreground>
                        <SolidColorBrush Color="#636AE8"/>
                    </ProgressBar.Foreground>
                </ProgressBar>
                <DataGrid x:Name="SourceDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" Style="{StaticResource RoundedDataGridStyle}" IsReadOnly="True" Margin="0,60,0,20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding SourceNo}" Width="40"/>
                        <DataGridTextColumn Header="Источник" Binding="{Binding SourceName}" Width="200"/>
                        <DataGridTextColumn Header="Отрывок" Binding="{Binding Excerpt}" Width="*"/>
                        <DataGridTextColumn Header="Процент совпадения" Binding="{Binding Similarity}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid x:Name="LinkDataGrid" Grid.Row="3" AutoGenerateColumns="False" CanUserAddRows="False" Style="{StaticResource RoundedDataGridStyle}" IsReadOnly="True" Margin="0,0,0,40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding LinkNo}" Width="40"/>
                        <DataGridTextColumn Header="Ссылка" Binding="{Binding Url}" Width="*"/>
                        <DataGridTextColumn Header="Статус" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Совпадений нет"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMatchFound}" Value="True">
                                            <Setter Property="Text" Value="Совпадение найдено"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Click="GenerateReportButton_Click" Grid.Row="3" Margin="0,0,0,5" Content="Отчёт" Style="{StaticResource ButtonStyle}" Width="90" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>